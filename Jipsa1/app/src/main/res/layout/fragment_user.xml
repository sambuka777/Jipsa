<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/bottomb"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/Imgbtn_UserBack"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:paddingLeft="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/prev" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_UserText"
                    android:layout_width="150dp"
                    android:layout_height="65dp"
                    android:fontFamily="@font/tb"
                    android:gravity="center"
                    android:text="정보수정"
                    android:textColor="#000000"
                    android:textSize="27sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_UserSpace"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_reID"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:paddingLeft="1dp"
                android:textColor="#000000"
                android:fontFamily="@font/tb"
                android:text="아이디"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ed_reID"
                    android:layout_width="348dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_style"
                    android:gravity="center|left"
                    android:hint="아이디"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_rePW"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/tb"
                android:paddingLeft="1dp"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_rePW"
                android:layout_width="350sp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_rePWC"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/tb"
                android:paddingLeft="1dp"
                android:text="비밀번호 확인"
                android:textColor="#000000"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_rePWC"
                android:layout_width="350sp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_reName"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/tb"
                android:text="이름"
                android:textColor="#000000"
                android:paddingLeft="1dp"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/ed_reName"
                android:layout_width="350sp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_style"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:ems="10"
                android:hint="이름"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_reBirth"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:paddingLeft="1dp"
                android:fontFamily="@font/tb"
                android:text="생년월일"
                android:textColor="#000000"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/ed_reBirth"
                android:layout_width="350sp"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:background="@drawable/edittext_style"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:ems="10"
                android:hint="생년월일"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_reEM"
                android:layout_width="350sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/tb"
                android:paddingLeft="1dp"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_reEM"
                    android:layout_width="230sp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_style"
                    android:ems="10"
                    android:hint="이메일"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_reEM"
                    android:layout_width="100sp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:fontFamily="@font/nx2gof"
                    android:text="인증하기"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_reCerNum"
                    android:layout_width="230sp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_style"
                    android:ems="10"
                    android:hint="인증번호"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_reCerC"
                    android:layout_width="100sp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:fontFamily="@font/nx2gof"
                    android:text="인증번호 확인"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_reCom"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="45sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_style"
                android:text="수정하기"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>