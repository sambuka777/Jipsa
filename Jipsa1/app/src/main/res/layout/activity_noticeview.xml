<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:background="@drawable/bottomb"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Imgbtn_NvBack"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:src="@drawable/prev"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_NvText"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:fontFamily="@font/tb"
            android:gravity="center"
            android:text="공지사항"
            android:textColor="#000000"
            android:textSize="27sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_NvSpace"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:paddingRight="10dp"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_NvTitle"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/font_nx2"
        android:hint="공지사항 제목"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_NvDate"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/font_nx2"
        android:hint="공지 날짜"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_NvContents"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="7dp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/font_nx2"
        android:paddingTop="5dp"
        android:hint="공지사항 내용"
        android:background="@drawable/edge"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_NvCheck"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/button_style"
        android:fontFamily="@font/tb"
        android:text="공지확인"
        android:textColor="#FFFFFF" />

</LinearLayout>