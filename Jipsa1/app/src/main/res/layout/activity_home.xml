<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ViewPager_Cat"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/cat1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ComuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커뮤니티"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_ComuMore"
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:layout_marginLeft="280sp"
                android:background="#FFFFFF"
                android:text="더보기" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_comulist1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="4. 가나다라마바사"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_comulist2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 김찬우 바보"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_comulist3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 김찬우 엉덩이"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_comulist4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 김찬우 뇽뇽"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_LostAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="실종 반려동물"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_LostAniMore"
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:layout_marginLeft="230sp"
                android:background="#FFFFFF"
                android:text="더보기" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Ib_lost1"
                android:layout_width="100sp"
                android:layout_height="125sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dogprofile1" />

            <ImageButton
                android:id="@+id/Ib_lost2"
                android:layout_width="100sp"
                android:layout_height="125sp"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dogprofile2" />

            <ImageButton
                android:id="@+id/Ib_lost3"
                android:layout_width="100sp"
                android:layout_height="125sp"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dogprofile3" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>