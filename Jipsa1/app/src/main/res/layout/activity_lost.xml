<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/bottomb"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Imgbtn_LostBack"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:src="@drawable/prev"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:fontFamily="@font/tb"
            android:gravity="center"
            android:text="실종신고"
            android:textColor="#000000"
            android:textSize="27sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_LostSpace"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:paddingRight="10dp"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="400sp" />

        <ImageButton
            android:id="@+id/btn_lost"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="13dp"
            android:padding="3dp"
            android:elevation="10dp"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_lostpet"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn_find"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:padding="5dp"
            android:elevation="10dp"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_lost"
            android:src="@drawable/ic_findpet"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/petinfobox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/boxname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/tb"
                android:text="정보창 이름"
                android:textColor="#000000"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:adjustViewBounds="true"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/dogicon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_petname"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/tb"
                            android:text="이름"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/info_petname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7sp"
                            android:fontFamily="@font/nx2gof"
                            android:text="펫 이름"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_petsex"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/tb"
                            android:text="성별"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/info_petsex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7sp"
                            android:fontFamily="@font/nx2gof"
                            android:text="펫 성별"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_petchr"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/tb"
                            android:text="특징"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/info_petchr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="40sp"
                            android:fontFamily="@font/nx2gof"
                            android:lineSpacingExtra="7dp"
                            android:text="팻 특징"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="343dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_chat"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/button_style"
                        android:fontFamily="@font/tb"
                        android:text="채팅 연결"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>