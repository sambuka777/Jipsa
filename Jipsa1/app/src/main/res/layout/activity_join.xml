<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/tv_ID"
                android:layout_width="370sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:paddingLeft="4dp"
                android:textColor="#000000"
                android:text="아이디"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_JID"
                    android:layout_width="230sp"
                    android:layout_height="38dp"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:hint="아이디"
                    android:paddingLeft="5dp"
                    android:textSize="20sp"
                    android:inputType="textPersonName"
                     />

                <Button
                    android:id="@+id/btn_Ol"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="중복검사"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_JPW"
                android:layout_width="370sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:paddingLeft="4dp"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_JPW"
                android:layout_width="350sp"
                android:layout_height="38dp"
                android:background="@drawable/edge"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:ems="10"
                android:hint="비밀번호"
                android:paddingLeft="5dp"
                android:inputType="textPassword"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tw_PWc"
                android:layout_width="370sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:text="비밀번호 확인"
                android:textColor="#000000"
                android:paddingLeft="4dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_PWc"
                android:layout_width="350sp"
                android:layout_height="38dp"
                android:background="@drawable/edge"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:ems="10"
                android:paddingLeft="5dp"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="370sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:text="이름"
                android:textColor="#000000"
                android:paddingLeft="4dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_Name"
                android:layout_width="350sp"
                android:layout_height="38dp"
                android:background="@drawable/edge"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:ems="10"
                android:hint="이름"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_Birth"
                android:layout_width="370sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:text="생년월일"
                android:textColor="#000000"
                android:paddingLeft="4dp"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_Birth"
                android:layout_width="350sp"
                android:layout_height="38dp"
                android:background="@drawable/edge"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:ems="10"
                android:hint="생년월일"
                android:paddingLeft="5dp"
                android:inputType="textPersonName"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_FEm"
                android:layout_width="370sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:text="이메일"
                android:textColor="#000000"
                android:paddingLeft="4dp"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_Em"
                    android:layout_width="230sp"
                    android:layout_height="38dp"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:hint="이메일"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_Cer"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="인증하기"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_CerNum"
                    android:layout_width="230sp"
                    android:layout_height="38dp"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:hint="인증번호"
                    android:paddingLeft="5dp"
                    android:inputType="textPersonName"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_FCerC"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:text="인증번호 확인"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_Com"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:background="@drawable/button_style"
                android:layout_marginBottom="30dp"
                android:text="회원가입"
                android:textColor="#FFFFFF" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>