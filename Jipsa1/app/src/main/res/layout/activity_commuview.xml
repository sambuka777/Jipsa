<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/bottomb"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backcomu"
            android:layout_width="45dp"
            android:scaleType="centerInside"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:src="@drawable/prev" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/tv_Comu"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:fontFamily="@font/tb"
            android:gravity="center"
            android:text="커뮤니티"
            android:textColor="#000000"
            android:textSize="27sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <ImageButton
            android:id="@+id/comumore"
            android:layout_width="45dp"
            android:scaleType="centerInside"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_height="45dp"
            android:src="@drawable/more" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/rere"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:background="@drawable/rerer"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rerer"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/edit"/>

            <Button
                android:id="@+id/rew"
                android:layout_width="130dp"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:fontFamily="@font/tway_air"
                android:textSize="18dp"
                android:text="게시글 수정"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rerem"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/delete"/>

            <Button
                android:id="@+id/rem"
                android:layout_width="130dp"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:layout_height="40dp"
                android:background="#00ff0000"
                android:fontFamily="@font/tway_air"
                android:textSize="18dp"
                android:text="게시글 삭제"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="left|center"
        android:paddingLeft="12dp"
        android:text="제목은 여기에~"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comuv_name"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:gravity="left|bottom"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"

            android:text="장준철"
            android:textSize="15dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comuv_wd"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:gravity="left|bottom"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="2021-05-20"
            android:textSize="15dp" />

        <TextView
            android:layout_width="1.5dp"
            android:layout_height="20dp"
            android:background="@drawable/comu_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:gravity="left|bottom"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="조회수:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/comuv_vn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:gravity="left|bottom"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="조회수"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_memo"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="600dp"
        android:text="여기에 글씨 나오겠지? 어떻게 꾸밀지 모르겠으니 일단은 이렇게둠" />
</LinearLayout>