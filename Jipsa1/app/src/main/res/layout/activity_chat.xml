<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:background="@drawable/commu_style"
        android:id="@+id/chat_1"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ch_name1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="장준철"
            android:textColor="#000000"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ch_chat1"
                android:layout_width="286dp"
                android:layout_height="50dp"
                android:layout_gravity=""
                android:gravity="left|center"
                android:paddingLeft="35dp"
                android:text="알바 진짜 ptsd 온다..."
                android:textColor="#000000"
                android:textSize="15dp" />

        <TextView
            android:id="@+id/ch_date1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="top|right"
            android:paddingRight="10dp"
            android:text="2020-05-21"
            android:textSize="15dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/commu_style"
        android:id="@+id/chat_2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ch_name2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="산타할배"
            android:textColor="#000000"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ch_chat2"
                android:layout_width="286dp"
                android:layout_height="50dp"
                android:layout_gravity=""
                android:gravity="left|center"
                android:paddingLeft="35dp"
                android:text="울면 선물 없다!"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ch_date2"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="top|right"
                android:paddingRight="10dp"
                android:text="2020-11-25"
                android:textSize="15dp" />


        </LinearLayout>

    </LinearLayout>




</LinearLayout>
