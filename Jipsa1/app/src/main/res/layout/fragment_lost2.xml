<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frameSize"
        android:layout_marginLeft="@dimen/pageMarginAndOffset"
        android:layout_marginRight="@dimen/pageMarginAndOffset"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBanner4"
            android:layout_width="200dp"
            android:layout_height="230dp"
            android:background="@drawable/dogprofile2"
            android:contentDescription="@string/app_name" />

        <EditText
            android:id="@+id/Ed2_lostinfor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edittext_style"
            android:hint="이름"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Ed2_lostinfor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/edittext_style"
            android:hint="성별"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Ed2_lostinfor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/edittext_style"
            android:hint="거주지"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Ed2_lostinfor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/edittext_style"
            android:hint="주요특징"
            android:textSize="16sp" />



    </RelativeLayout>


</FrameLayout>